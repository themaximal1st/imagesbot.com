<%- include('partials/_header') %>
<div class="min-h-screen flex flex-col p-8 gap-4 lg:gap-8 justify-center items-center relative">
    <a href="/" class="font-semibold absolute top-4">Images<span class="text-gray-700">Bot</span></a>
    <div class="max-w-5xl mx-auto flex flex-col gap-8 items-center mt-8">
        <h1 class="text-2xl md:text-3xl lg:text-4xl xl:text-5xl flex"><%- search.Queries[0].query %></h1>
        <%
        let klass;
        if (favorites.length >= 7) {
            klass = "grid-cols-2 md:grid-cols-4 lg:grid-cols-5 xl:grid-cols-6 2xl:grid-cols-7";
        } else if (favorites.length >= 5 ) {
            klass = "grid-cols-2 md:grid-cols-4 lg:grid-cols-5";
        } else if (favorites.length >= 4 ) {
            klass = "grid-cols-2 md:grid-cols-4";
        } else if (favorites.length >= 3 ) {
            klass = "grid-cols-2 md:grid-cols-3";
        } else if (favorites.length >= 2 ) {
            klass = "grid-cols-2";
        } else {
            klass = "grid-cols-1";
        }
        %>
        <div id="favorites" class="grid gap-4 <%- klass %>">
            <% favorites.forEach(function(result) { %>
            <a href="<%- result.image_url %>" target="_blank" class="w-full aspect-square bg-gray-50 flex justify-center items-center text-gray-600 hover:scale-110 transition-all cursor-pointer">
                <img src="<%- result.image_url %>" />
            </a>
            <% }) %>
        </div>
    </div>
</div>
<%- include('partials/_footer') %>